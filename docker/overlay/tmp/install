#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Get PHP version.
#======================================================================================================================

cd /tmp

PHP_VERSION=$(cat PHP_BUILD)
bf-echo "PHP version ${PHP_VERSION}."


#======================================================================================================================
# Install dependencies.
#======================================================================================================================

bf-echo "Installing PHP v${PHP_VERSION}..."
apk add --no-cache \
    php81-curl=${PHP_VERSION} \
    php81-session=${PHP_VERSION} \
    php81-pecl-yaml
bf-done
